{
  "name": "acms",
  "version": "1.0.0",
  "description": "Asset & Contract Management System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install --production && cd ../client && env NODE_ENV= npm install",
    "build": "cd client && npm run build",
    "build:production": "cd client && npm install && npm run build",
    "start": "cd server && npm start",
    "test": "cd server && npm test"
  },
  "keywords": [
    "asset-management",
    "contract-management",
    "inventory"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

